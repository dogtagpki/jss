#ifndef JSSVER_H
#define JSSVER_H

/*
 * JSS's major version, minor version, patch level, and whether
 * this is a beta release.
 *
 * The format of the version string should be
 *     "<major version>.<minor version>[.<patch level>] [<Beta>]"
 */

/********************************************************************/
/* The VERSION Strings should be updated everytime a new release    */
/* of JSS is generated. Note that this is done by changing          */
/* cmake/JSSConfig.cmake.                                           */
/********************************************************************/

#define JSS_VERSION  "${JSS_VERSION}"
#define JSS_VMAJOR   ${JSS_VERSION_MAJOR}
#define JSS_VMINOR   ${JSS_VERSION_MINOR}
#define JSS_VPATCH   ${JSS_VERSION_PATCH}
#define JSS_BETA     ${JSS_VERSION_BETA}

#endif
